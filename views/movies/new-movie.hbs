<h2>Create movie</h2>
<form action="/movies/create" method="POST">
  <input
    type="text"
    name="title"
    id="title"
    placeholder="title"
    class="form-control mb-2"
  />
  <input
    type="text"
    name="genre"
    id="genre"
    placeholder="genre"
    class="form-control mb-2"
  />
  <input
    type="text"
    name="plot"
    id="plot"
    placeholder="plot"
    class="form-control mb-2"
  />
  <label for="cast">Cast</label>
  <select name="cast" id="cast" multiple>
    {{#each celebs}}
      <option value="{{this._id}}">{{this.name}}</option>
    {{/each}}
  </select>
  <input type="submit" value="Create movie" class="btn btn-primary" />
</form>